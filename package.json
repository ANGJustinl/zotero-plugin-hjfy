{
  "name": "zotero-plugin-hjfy",
  "type": "module",
  "version": "0.0.1",
  "description": "Zotero plugin for translating arXiv articles based on LaTeX source code using hjfy.top Translation",
  "config": {
    "addonName": "幻觉翻译 arXiv 翻译",
    "addonID": "hjfy-arxiv@translator.com",
    "addonRef": "hjfyarxiv",
    "addonInstance": "HjfyArxiv",
    "prefsPrefix": "extensions.zotero.hjfyarxiv"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angjustinl/zotero-plugin-hjfy.git"
  },
  "author": "Your Name",
  "bugs": {
    "url": "https://github.com/angjustinl/zotero-plugin-hjfy/issues"
  },
  "homepage": "https://github.com/angjustinl/zotero-plugin-hjfy#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "zotero-plugin test",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^5.1.0-beta.4"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.2.0",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "chai": "^6.2.1",
    "eslint": "^9.32.0",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "zotero-plugin-scaffold": "^0.8.0",
    "zotero-types": "^4.1.0-beta.1"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
